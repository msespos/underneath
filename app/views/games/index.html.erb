<h1 class="mb-4 text-center text-3xl m-20 mb-20">Underneath</h1>

<div class="flex justify-center">
	<div class="max-w-xl object-center">
		<% if !@games.empty? %>
			<% @games.each do |g| %>
				<div>
					Game <%= g.id %>:
					<% if @player_id.in? [g.worm_player_id, g.human_player_id] %>
						<% if g.status == "Game in play" %>
							<%= link_to "Play", g %>
						<% else %>
							<%= link_to "Review", g %>
						<% end %>
					<% else %>
						<%= link_to "Join", "/games/#{g.id}/join", method: :post %>
					<% end %>
				</div>
			<% end %>
		<% end %>
		<div>
			<div class="float-left">
				Create new game:
			</div>
			<div class="float-left">
				<%= link_to image_tag("/img/human.png"),
						'/games?side=human',
						method: :post %>
			</div>
			<div class="float-left">
			<%= link_to image_tag("/img/worm.png"),
					'/games?side=worm',
					method: :post %>
			</div>
		</div>
	</div>
</div>
